<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="08" author="bogdanoslav">
        <renameColumn tableName="appointment" oldColumnName="end_time" newColumnName="actual_end_time" columnDataType="TIMESTAMP"/>
        <modifyDataType tableName="appointment" columnName="actual_end_time" newDataType="TIME NOT NULL"/>
        <modifyDataType tableName="appointment" columnName="start_time" newDataType="TIME NOT NULL"/>
    </changeSet>
    <changeSet id="09" author="bogdanoslav">
        <modifyDataType tableName="appointment" columnName="status" newDataType="VARCHAR(10) NOT NULL"/>
    </changeSet>
    <changeSet id="10" author="bogdanoslav">
        <addNotNullConstraint tableName="working_hours" columnName="start_time" columnDataType="TIME"/>
    </changeSet>
</databaseChangeLog>