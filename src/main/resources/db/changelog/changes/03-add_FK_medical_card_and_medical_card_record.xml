<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="03" author="bogdanoslav">
        <addForeignKeyConstraint baseTableName="medical_card" baseColumnNames="id_patient"
                                 constraintName="FK_medicalCard_patient"
                                 referencedTableName="patient" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="medical_card_record" baseColumnNames="id_medical_card"
                                 constraintName="FK_medicalCardRecord_medicalCard"
                                 referencedTableName="medical_card" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="medical_card_record" baseColumnNames="id_doctor"
                                 constraintName="FK_medicalCardRecord_doctor"
                                 referencedTableName="doctor" referencedColumnNames="id"/>
        <rollback>
            <dropAllForeignKeyConstraints baseTableName="medical_card"></dropAllForeignKeyConstraints>
            <dropAllForeignKeyConstraints baseTableName="medical_card_record"></dropAllForeignKeyConstraints>
        </rollback>
    </changeSet>
</databaseChangeLog>