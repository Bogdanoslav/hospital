<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="01" author="bogdanoslav">
        <createTable tableName="medical_card"
                     remarks="A table for merging all doctor records in one medical card">
            <column name="id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="id_patient" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="medical_card"></dropTable>
        </rollback>
    </changeSet>
</databaseChangeLog>